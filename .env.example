# Required for CrewAI agent
OPENAI_API_KEY=your-openai-api-key-here

# Optional: For web research (if using SerperDevTool)
SERPER_API_KEY=your-serper-api-key-here

# Voice Engine Selection (v1 vs v2)
# v1 (local): No API costs, works offline, requires model downloads
# v2 (api): Cloud-ready, better quality, requires API calls

STT_ENGINE=local  # 'local' (Whisper model) or 'api' (Whisper API)
TTS_ENGINE=local  # 'local' (pyttsx3) or 'api' (OpenAI TTS)

# OpenAI TTS Voice (for TTS_ENGINE=api)
OPENAI_TTS_VOICE=alloy  # alloy, echo, fable, onyx, nova, shimmer

# Deployment Mode
DEPLOYMENT_MODE=local  # 'local' or 'cloud'
